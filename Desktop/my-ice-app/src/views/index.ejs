<% include partials/_header %>
<pre>
    <%= tasks  %>
</pre>
<div class="container">
    <div class="row">
        <!--FORM-->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="author" placeholder="Author" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" placeholder="Description"
                                class="form-control"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lock">
                            Add
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!--LIST-->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Author</th>
                        <th>Description</th>
                        <th>Operations</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < tasks.length; i++) {  %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= tasks[i].author %></td>
                        <td><%= tasks[i].description %></td>
                        <td>
                            <a href="" class="btn btn-dark">Done</a>
                            <a href="" class="btn btn-danger">Delete</a>
                            <a href="" class="btn btn-info">Edit</a>
                        </td>
                    </tr>

                    <% } %>
                </tbody>
            </table>

        </div>
    </div>
</div>

<% include partials/_footer %>